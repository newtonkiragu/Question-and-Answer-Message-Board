{{#if answerForm}}
<h1>Answer</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="answer">Answer</label>
      {{input value=answer id="answer"}}
    </div>


    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'saveAnswer1'}} class="btn btn-submit">Save</button>
  </form>
</div>
{{else}}
<button {{action 'answerFormShow'}} class="btn btn-submit">Answer</button>
{{/if}}
