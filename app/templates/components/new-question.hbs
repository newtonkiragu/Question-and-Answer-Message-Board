{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="querry">Question</label>
        {{input value=querry id="querry"}}
      </div>


      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveQuestion1'}} class="btn btn-primary">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'QuestionFormShow'}} class="btn btn-submit">New Question</button>
{{/if}}
